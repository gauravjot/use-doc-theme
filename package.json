{
	"name": "use-doc-theme",
	"type": "module",
	"source": "src/index.ts",
	"version": "0.2.0",
	"description": "React hook for switching theme between light, dark and system. Compatible with TailwindCSS.",
	"main": "dist/index.js",
	"esmodule": "dist/index.modern.js",
	"umd:main": "dist/index.umd.js",
	"scripts": {
		"build": "microbundle build --entry src/index.ts --name use-doc-theme --tsconfig tsconfig.json"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"module": "./dist/index.esm.js",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"keywords": [
		"react-hook"
	],
	"engines": {
		"node": ">= 10.0.0"
	},
	"files": [
		"dist"
	],
	"author": "Gauravjot Garaya (connect@gauravjot.com)",
	"license": "MIT",
	"peerDependencies": {
		"react": ">=16.8.0"
	},
	"homepage": "https://github.com/nzran/use-doc-theme",
	"devDependencies": {
		"@types/react": "^16.8.19",
		"@types/react-dom": "^16.8.4",
		"microbundle": "^0.15.1",
		"react": "16.8.3",
		"react-dom": "16.8.3",
		"typescript": "^5.0.2"
	}
}
